<!DOCTYPE html>
<html>
<head>
  <title>RatioConsole</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="main-container" class="container-fluid">
  <nav class="navbar navbar-inverse">
    <div class="container">
      <div class="navbar-header">
        <%= link_to 'DqR Domo', root_path, class: 'navbar-brand' %>
      </div>
      <div id="navbar">
        <ul class="nav navbar-nav">
          <li><%= link_to 'Home', root_path %></li>
          <li><%= link_to 'Dispositivos', devices_path %></li>
          <li><%= link_to 'Escenas', devices_path %></li>
          <li><%= link_to 'ProgramaciÃ³n', devices_path %></li>
          <li><%= link_to 'Informes', devices_path %></li>
        </ul>
        <ul class="nav navbar-nav pull-right">
          <% if current_user %>
              <li><a href="#"><span><%= current_user.login %></span></a></li>
              <li><%= link_to 'Sign Out', sign_out_path, method: :delete %></li>
          <% else %>
              <li><%= link_to 'Sign In', sign_in_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container">
    <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>">
          <%= value %>
        </div>
    <% end %>

    <%= yield %>
  </div>
</div>


</body>
</html>
