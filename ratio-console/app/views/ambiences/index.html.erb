<p id="notice"><%= notice %></p>

<h1>Ambientes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ambiences.each do |ambience| %>
      <tr>
        <td><%= ambience.name %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Show', ambience, class:'btn btn-primary' %>
            <%= link_to 'Edit', edit_ambience_path(ambience), class:'btn btn-primary' %>
            <%= link_to 'Destroy', ambience, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-primary' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ambience', new_ambience_path %>
