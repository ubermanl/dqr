<div class="ui menu borderless">
  <div class="item header"><i class="icon block layout"></i><%= @ambience.name %></div>
  <div class="right menu">
      <%= link_to text_with_icon('Edit','edit'), edit_ambience_url(@ambience), class:'item' %>    
  </div>
</div>
<table class="ui table unstackable selectable">
  <thead>
    <tr>
      <th>Device Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @ambience.devices.each do |a| %>
      <tr>
        <td><%= a.name %></td>
        <td class="right aligned"><%= link_to semantic_icon('unhide'), a, class:"ui button icon compact primary" %></td>
      </tr>
    <% end %>
    <% if @ambience.devices.none? %>
      <tr>
        <td colspan="2">No devices here!</td>
      </tr>
    <% end %>
  </tbody>
</table>