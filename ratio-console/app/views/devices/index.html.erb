<p id="notice"><%= notice %></p>

<h1>Dispositivos</h1>
<%= link_to 'Nuevo Dispositivo', new_device_path, class:'btn btn-primary' %>
<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Tipo</th>
      <th>Modelo</th>
      <th>Ambiente</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.name %></td>
        <td><%= device.device_type.name %></td>
        <td><%= device.model %></td>
        <td><%= device.ambience.name %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Show', device, class:'btn btn-primary' %>
            <%= link_to 'Edit', edit_device_path(device), class:'btn btn-primary' %>
            <%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-primary' %>
          </div>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>


