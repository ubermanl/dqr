<div class="ui menu borderless">
  <div class="item header">Schedules</div>
  <div class="right menu">
    <%= link_to text_with_icon('New Schedule','plus'), new_schedule_path, class:'ui item main-link'  %>
  </div>
</div>
<table class="ui table striped unstackable">
  <thead>
    <tr>
      <th>Description</th>
      <th>Enabled</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.description %></td>
        <td><%= schedule.enabled ? 'Yes' : 'No' %></td>
        <td class="right aligned">
          <div class="ui buttons">
            <%= link_to semantic_icon('unhide'), schedule, class:'ui icon button compact' %>
            <%= link_to semantic_icon('edit'), edit_schedule_path(schedule), class:'ui icon button compact' %>
            <%= link_to semantic_icon('delete'), schedule, method: :delete, data: { confirm: 'Are you sure?' },class:'ui icon button compact'  %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

